<!DOCTYPE html>
<html>

<head>
    #parse("./common/head.vm")
    <title>项目管理系统</title>
    <style>
        body {
            padding: 10px;
        }
    </style>
</head>

<body>
<div class="layui-row">
    <button id="addBuild" class="layui-btn layui-btn-sm">新增构建</button>
    <button id="refresh" class="layui-btn layui-btn-sm">刷新表格</button>
</div>
<table class="layui-table" id="tab_build" lay-filter="tab_build" style="margin: 0;"></table>

</body>

<script type="text/html" id="bar_build">
    <a href="javascript:;" class="layui-btn  layui-btn-sm layui-btn-normal" lay-event="update">编辑</a>

    {{# if(d.status==1) { }}
    <a href="javascript:;" class="layui-btn layui-btn-sm layui-btn-danger" lay-event="stop">停止</a>
    {{# }else if(d.status== 4){ }}

    {{# }else{ }}
    <a href="javascript:;" class="layui-btn layui-btn-sm layui-btn-danger" lay-event="build">构建</a>
    {{# } }}
        #if($user.isSystemUser())
        <a href="javascript:;" class="layui-btn layui-btn-sm layui-btn-danger" lay-event="delete">删除</a>
        #end
</script>

<script type="text/javascript">

    var statusArray = [];
        #if($statusArray)
        statusArray = $statusArray;
        #end

    function openLog(id, buildId) {
        layer.open({
            type: 2,
            title: '构建日志',
            content: './logPage.html?id=' + id + "&buildId=" + buildId,
            area: ['80%', '90%'],
        });
    }

    function loadSuccess() {
        tableRender({
            id: 'tab_build',
            elem: '#tab_build',
            url: './list_data.json',
            cols: [[
                {field: 'name', title: '名称'},
                {field: 'branchName', title: '分支'},
                {
                    field: 'status', title: "当前状态", templet: function (d) {
                        for (var i = 0; i < statusArray.length; i++) {
                            if (statusArray[i].code == d.status) {
                                return statusArray[i].desc;
                            }
                        }
                        return "未知";
                    }
                },
                {
                    field: 'buildIdStr', title: '当前构建ID', templet: function (d) {
                        return "<a herf='' style='color: blue;' onclick='openLog(\"" + d.id + "\"," + d.buildId + ")'>" + d.buildIdStr + "</a>";
                    }
                },
                {field: 'modifyUser', title: '最后修改人'},
                {field: 'modifyTime', title: '最后修改时间'},
                {field: 'op', title: '操作', align: 'center', toolbar: '#bar_build', fixed: 'right'}
            ]]
        });

        // '添加监控'点击事件
        $('#addBuild').on('click', function () {
            // 弹出
            layer.open({
                type: 2,
                title: '新增构建',
                content: './edit.html',
                area: ['80%', '80%'],
            });
        });

        // '刷新表格'点击事件
        $('#refresh').on('click', function () {
            table.reload('tab_build', {});
        });

        // 表格工具条事件
        table.on('tool(tab_build)', function (obj) {
            var data = obj.data;
            var event = obj.event;
            if ('update' === event) {
                // 修改
                updateApplication(data);
            } else if ('delete' === event) {
                layer.confirm('确定删除此构建吗 ' + data.name + '？，删除将一并删除所有构建历史', {
                    title: '系统提示'
                }, function (index) {
                    layer.close(index);
                    loadingAjax({
                        url: './delete.json',
                        data: {
                            id: data.id
                        },
                        success: function (data) {
                            layer.msg(data.msg);
                            if (200 == data.code) {
                                table.reload('tab_build', {});
                            }
                        }
                    });
                });
            } else if ('build' == event) {
                var dataId = data.id;
                loadingAjax({
                    url: './start.json',
                    data: {
                        id: dataId
                    },
                    success: function (data) {
                        layer.msg(data.msg);
                        if (200 == data.code) {
                            table.reload('tab_build', {});
                            openLog(dataId, data.data);
                        }
                    }
                });
            } else if ('stop' == event) {
                loadingAjax({
                    url: './cancel.json',
                    data: {
                        id: data.id
                    },
                    success: function (data) {
                        layer.msg(data.msg);
                        if (200 == data.code) {
                            table.reload('tab_build', {});
                        }
                    }
                });
            }
        });

        // 编辑监控
        function updateApplication(data) {
            layer.open({
                type: 2,
                title: '修改监控',
                content: './edit.html?id=' + data.id,
                area: ['80%', '80%'],
            });
        }
    }
</script>
</html>
