<!DOCTYPE html>
<html>

<head>
    #parse("./common/head.vm")
    <title>log</title>
    <style>
        body {
            padding: 10px;
        }

        .context {
            height: 80vh;
        }
    </style>
</head>

<body>
<form action="" class="layui-form" id="form_ngx">
    <div class="layui-form-item">
        <a class="layui-btn" id="cancel" style="display: none;">取消构建</a>
    </div>
    <div class="layui-form-item">
        <textarea name="context" id="logContext" placeholder="日志内容" readonly disabled
                  class="layui-textarea context"></textarea>
    </div>
</form>
<script type="text/javascript" src="$!jpomProxyPath/static/js/auto-line-number.js?v=$staticCacheTime"></script>

<script type="text/javascript">
    var line = 1;
    var showLine = 0;

    function loadSuccess() {
        initPlugin();
        $("textarea").setTextareaCount({
            width: "30px",
            bgColor: "#ddd",
            color: "#000",
            display: "inline-block"
        });

        var logContext = $("#logContext");
        var timeId;
        getLog();
        var getIng = false;

        function getLog() {
            if (getIng) {
                return;
            }
            getIng = true;
            loadingAjax({
                url: './getNowLog.json',
                data: {
                    id: getQueryString('id'),
                    buildId: getQueryString('buildId'),
                    line: line
                },
                success: function (data) {
                    if (201 == data.code) {
                        getLog();
                        return;
                    }
                    if (200 == data.code) {
                        //
                        var dataLines = data.data.dataLines;
                        for (var i = 0; i < dataLines.length; i++) {
                            logContext.append(dataLines[i]);
                            logContext.append('\r\n');
                            // showLine++;
                        }
                        $("textarea").setTextareaCount({
                            width: "30px",
                            bgColor: "#ddd",
                            color: "#000",
                            display: "inline-block"
                        });
                        var h = logContext[0].scrollHeight;
                        logContext.scrollTop(h);
                        line = data.data.line;
                        //
                        if (data.data.run) {
                            if (!timeId) {
                                timeId = setInterval(function () {
                                    getLog();
                                }, 1000);
                            }
                            $("#cancel").show();
                        } else {
                            clearInterval(timeId);
                            $("#cancel").hide();
                        }
                    } else {
                        layer.msg(data.msg);
                    }
                },
                complete: function () {
                    getIng = false;
                }
            }, true);
        }

        $("#cancel").click(function () {
            loadingAjax({
                url: './cancel.json',
                data: {
                    id: dataId
                },
                success: function (data) {
                    layer.msg(data.msg);
                    if (200 == data.code) {
                        $("#cancel").hide();
                    }
                }
            });
        });
    }

</script>

</html>
